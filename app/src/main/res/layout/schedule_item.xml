<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <TextView
        android:id="@+id/clientNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:drawableLeft="@mipmap/icon_user"
        android:drawableStart="@mipmap/icon_user"
        android:gravity="bottom"
        android:drawablePadding="5dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@android:color/black"
        tools:text="Test text"/>

    <TextView
        android:id="@+id/timeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:drawableLeft="@mipmap/icon_time"
        android:drawableStart="@mipmap/icon_time"
        android:gravity="bottom"
        android:drawablePadding="5dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@android:color/black"
        tools:text="Test text"/>

    <TextView
        android:id="@+id/addressLabel"
        android:layout_below="@id/clientNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@mipmap/icon_location"
        android:drawableStart="@mipmap/icon_location"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:layout_marginBottom="5dp"
        android:singleLine="true"
        tools:text="Address line text"/>

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/addressLabel"
        android:orientation="horizontal">

        <Button
            android:id="@+id/scheduleCallBtn"
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            tools:text="+373 79 466 284"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@android:color/white"
            android:background="@drawable/round_corner_btn_accent"/>

        <Button
            android:id="@+id/scheduleStatusBtn"
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="0dp"
            android:layout_height="35dp"
            tools:text="Status"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@android:color/white"
            android:background="@drawable/round_corner_btn_gray"/>

        <Button
            android:id="@+id/scheduleMapItBtn"
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/mapit"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@android:color/white"
            android:background="@drawable/round_corner_btn_accent"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@id/buttonsLayout"
        android:layout_marginTop="16dp"/>
</RelativeLayout>